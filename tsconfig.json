{
  "compilerOptions": {
    "outDir": "./assets/js/app",
    "allowJs": true,
    "target": "es6",
    "module": "commonjs",
    "sourceMap": true,
    "strict": true,
    "alwaysStrict": true,
    "noImplicitAny": true,
    "noImplicitThis": true,
    "strictNullChecks": true,
    "preserveConstEnums": true
  },
  "files": [
    "./src/application.data.ts",
    "./src/application.ts",
    "./src/config.editor.ts",
    "./src/configs.ts",
    "./src/css.editor.ts",
    "./src/layouts.ts",
    "./src/preview.ts",
    "./src/preview.editor.ts",
    "./src/template.editor.ts"
  ],

  "include": [
    "src/**/*"
  ],
  "exclude": ["node_modules", "**/*.spec.ts"]
}